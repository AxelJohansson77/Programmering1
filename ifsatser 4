using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace if_satser_1
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Mata in ett tal: ");
            string inmatat = Console.ReadLine();
            int x = int.Parse(inmatat);

            if ((x % 7) ==0)
            {
                Console.WriteLine("Talet 채r j채mt delbart med sju! ");
            }
            if ((x % 7) != 0)
            {
                Console.WriteLine("Talet 채r inte j채mt delbart med sju. Resten blir: " + (x % 7));
          
                Console.ReadLine();
            }
        }
    }
}
