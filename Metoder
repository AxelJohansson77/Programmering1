        static double CelsiusTillFarenheit(double degree)
        {
         
           return ((degree / 5.0) * 9 + 32);
        }
        static void Main(string[] args)
        {
            Console.WriteLine("Mata in ett heltal: ");
            string celcius;
            celcius = Console.ReadLine();
            double grader = double.Parse(celcius);
            Console.WriteLine("Grader i fahrenheit är: " + CelsiusTillFarenheit(grader));
            */


