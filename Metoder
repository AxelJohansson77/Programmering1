        // Övning 3

        static int KastaTärning(int antal)
        {
            for (int x = 0; x < antal; x++)
            {
                Random kör = new Random(1 - 6);
            }

            return antal;
        }
       
        static void Main(string[] args)
        {
            Console.WriteLine("Antal kast med tärning: ");
            string kast;
            kast = Console.ReadLine();
            int resultat = int.Parse(kast);
            Console.WriteLine("Resultat: " + KastaTärning(resultat));
           

        }
        }

